@model WebApp_FireAndIce.ViewModels.Home.RegisterVM
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styleLettersOfAffection.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>
    <div class="content">
        <h1>Огън и лед</h1>
        <hr>
        <form action="/Home/Login" method="post">
            <h3 class="mt-4 mb-5">Регистрация</h3>
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Username)</div>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", @placeholder = "Username" })
                <div>
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Password)</div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Password" })
                <div>@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="form-group text-danger">
                @Html.ValidationMessage("authError", new { @style = "right" })
                @Html.ValidationMessage("releasedError", new { @style = "right" })
            </div>
            <button type="submit" class="btn btn-primary mt-5 btn-lg" style="background-color: #9C2D41; border-color: #9C2D41;" value="Register">Регистрация</button>
        </form>
    </div>
</body>
</html>